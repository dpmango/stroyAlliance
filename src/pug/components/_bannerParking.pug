// BANNER :: START


//- VARIABLE
//- ==========
-
  var sliderLocationArr = [
    "<span>ЖК</span> <span>«Гринхаус»</span>",
    "<span>Петровский</span> <span>квартал</span>",
    "<span>ЖК на</span> <span>ул. Макаренко</span>",
    "<span>Luxury</span> <span>Village</span>"
  ];
//- ==========
//- MIXIN
//- ==========
mixin swapInfoParking()
  div(class="banner__swap banner__swap--parking")
    div(swap-parking-js)
      -for(var i = 0; i < 5; i++)
        div(
          class="banner__swap-content"
        )
          p.banner__swap-title!= "Паркинг"
          .banner__swap-wrap
            p!= (i % 2 === 0) ? "от <span>1 500 000₽</span>" : "от <span>950 000₽</span>"
            p!= (i % 2 === 0) ? "от <span>4 000 000₽</span>" : "от <span>7 550 000₽</span>"
          a(href="#" class="banner__swap-btn" title="")!= "подробнее"
//- ==========


.banner
  .banner__gradient

  +carouselBg("parking", "carousel-parking-js", "carParking")

  .container.container--slider.wow.wowFadeLeft(data-animation-delay="0.4s")
    +sliderLocation("parking", "slider-parking-js", sliderLocationArr)

  .container.container--swap.wow.wowFadeRight(data-animation-delay="0.6s")
    +swapInfoParking()

  include ../macros/_mouse


// BANNER :: END
