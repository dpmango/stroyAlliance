#choose.choose.choose--realty
  .container

    h3.main__title!= "Выбрать помещение"

    .choose__row
      .choose__row-left

        .choose__field.choose__field-radioWrap
          p!= "Продажа"
          +checkboxBtn("checkbox--irisBlue", "")
          p!= "Аренда"


        .choose__field-selectWrap
          .choose__field.choose__field-select.choose__field-selectHouse
            p.choose__field-title!= "Дом"
            .choose__field-wrap
              +select(selectHouseNumber)

          .choose__field.choose__field-select.choose__field-selectSection
            p.choose__field-title!= "Секция"
            .choose__field-wrap
              +select(selectSection)

        .choose__field.choose__field-table.choose__field-table--sale.is-active(table-sale-js)
          .table(table-js)
            .table__thead(thead-js)
              .table__tr(thead-tr-js)
                -for(var i = 0, len = tableHeadSale.length; i < len; i++)
                  .table__th(th-js data-id!= i data-type!= tableTypeSale[i])
                    != tableHeadSale[i]
                    i.icon.icon-arrow

            .table__tbody(tbody-js)
              -for(var i = 0, len = tableDealSale.length; i < len; i++)
                .table__tr(tbody-tr-js)
                  .table__td(td-js)!= tableDealSale[i]
                  .table__td(td-js)!= tableArea[i]
                  .table__td(td-js)!= tableCost[i]
                  .table__td(td-js)!= tablePrice[i]

        .choose__field.choose__field-table.choose__field-table--rent(table-rent-js)
          .table(table-js)
            .table__thead(thead-js)
              .table__tr(thead-tr-js)
                -for(var i = 0, len = tableHeadRent.length; i < len; i++)
                  .table__th(th-js data-id!= i data-type!= tableTypeRent[i])
                    != tableHeadRent[i]
                    i.icon.icon-arrow

            .table__tbody(tbody-js)
              -for(var i = 0, len = tableDealRent.length; i < len; i++)
                .table__tr(tbody-tr-js)
                  .table__td(td-js)!= tableDealRent[i]
                  .table__td(td-js)!= tableArea[i]
                  .table__td(td-js)!= tableCost[i]
                  .table__td(td-js)!= tablePrice[i]


