  var submenuQuarterArr = [
    "ДРУГИЕ ОБЪЕКТЫ",
    "Генплан",
    "Описание объекта",
    "Что рядом",
    "Где купить"
  ];
  var submenuFlatArr = [
    "ДРУГИЕ ДОМА",
    "Выбрать квартиру",
    "Описание объекта",
    "Что рядом",
    "Где купить"
  ];
  var submenuHouseArr = [
    "НАЗАД К ПРОЕКТУ",
    "Выбрать квартиру",
    "Описание объекта",
    "Где купить",
    "ДРУГИЕ ДОМА"
  ];
  var submenuHrefQurterArr = [
    "#",
    "#masterplan",
    "#about",
    "#nearby",
    "#buy"
  ];
  var submenuHrefFlarArr = [
    "#",
    "#choose",
    "#about",
    "#nearby",
