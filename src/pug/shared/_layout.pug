include _mixins
include _variable

doctype html
html(lang="en")
  head
    include _head

  body(class=bodyClass)
    // place where pjax bindings happen's
    #barba-wrapper
      block header
        include ../components/_header
    
      // what should be changed with every pjax
      .page(class=outClass)
        .page__content
          block content

        block footer
          include ../components/_footer

        if(bodyClass === "flat" || bodyClass === "quarter")
          block modal
            include ../components/_modal
          
      block scripts
        include _scripts
